<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- fields -->
    <declare-styleable name="Field">
        <attr name="materialfieldsTitle" format="string" />
        <attr name="materialfieldsValue" format="string" />
        <attr name="materialfieldsDisabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FieldGeneric">
        <attr name="materialfieldsDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="FieldInputText">
        <attr name="materialfieldsRequired" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FieldCheckBox">
        <attr name="materialfieldsChecked" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FieldDateRange">
        <attr name="materialfieldsDefaultStartDateUnixTimestamp" format="float" />
        <attr name="materialfieldsDefaultEndDateUnixTimestamp" format="float" />
        <attr name="materialfieldsDateLimitRangeStartUnixTimestamp" format="float" />
        <attr name="materialfieldsDateLimitRangeEndUnixTimestamp" format="float" />
        <attr name="materialfieldsChecked" />
    </declare-styleable>

    <declare-styleable name="FieldAction">
        <attr name="materialfieldsTitle" />
        <attr name="materialfieldsDrawable" />
        <attr name="materialfieldsDisabled" />
        <attr name="materialfieldsDrawableTint" format="color" />
    </declare-styleable>

    <!-- Texts -->
    <declare-styleable name="Text">
        <attr name="materialfieldsText" format="string" />
        <attr name="materialfieldsTextAlignment" format="string" />
    </declare-styleable>

    <declare-styleable name="Header">
        <attr name="materialfieldsText" />
    </declare-styleable>

    <!-- Extra -->
    <declare-styleable name="ShoppingList">
        <attr name="materialfieldsAddItemPlaceHolder" format="string" required="true" />
        <attr name="materialfieldsDisabledAdd" format="boolean" />
        <attr name="materialfieldsDisabledEntries" format="boolean" />
    </declare-styleable>

    <declare-styleable name="List">
        <attr name="materialfieldsAddItemPlaceHolder" required="true" />
        <attr name="materialfieldsDisabledAdd" />
        <attr name="materialfieldsDisabledEntries" />
    </declare-styleable>

</resources>