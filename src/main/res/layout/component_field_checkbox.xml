<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorWhite">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/field_checkbox_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/colorWhite">

            <CheckBox
                android:id="@+id/field_checkbox_item_check"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:text="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/field_checkbox_item_check"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/field_checkbox_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="Checkbox"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/item_list_title"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/field_checkbox_item_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="This is a long checkbox description"
                    android:textColor="@color/colorGrey600"
                    android:textSize="@dimen/item_list_subtitle"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="0dp"
                android:background="@color/colorGrey300"
                app:layout_constraintBottom_toBottomOf="parent" />
        </android.support.constraint.ConstraintLayout>

</merge>